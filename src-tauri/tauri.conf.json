{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "appmapos",
  "version": "0.1.0",
  "identifier": "com.appmapos.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "App Mapos",
        "width": 1920,
        "height": 1080,
        "fullscreen": true,
        "resizable": false,
        "maximized": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "url": "https://app.mapos.com.tr"
      }
    ],
    "security": {
      "csp": null,
      "dangerousDisableAssetCspModification": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
